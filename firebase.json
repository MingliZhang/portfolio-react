{
    "hosting": {
        "public": "dist",
        "site": "minglizhang-react",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "frameworksBackend": {
            "region": "us-central1"
        },
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    },
    "emulators": {
        "hosting": {
            "port": 5002
        },
        "ui": {
            "enabled": true
        },
        "singleProjectMode": true
    }
}
